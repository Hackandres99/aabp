<style>
    img {
        border-radius: 50%;
    }

    .jumbotron .row {
        display: flex;
        flex-wrap: wrap;
    }

    .jumbotron .col-md-6 {
        width: 50%;
        padding: 15px;
        box-sizing: border-box;
    }

    .col-md-4 {
        border-radius: 20px;
    }



    .jumbotron {
        background-color: #FFF2CC;
        margin-top: 10px;
    }

    body {
